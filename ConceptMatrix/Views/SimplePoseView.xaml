		<Grid Grid.Column="3" Grid.RowSpan="2">
			<StackPanel>
				<GroupBox Header="Options" Margin="6" Padding="4">

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<Label Grid.Row="0" Grid.Column="0" Content="{Binding Source={x:Static resx:UIPoseStrings.EnableEditing}}" VerticalContentAlignment="Center"/>
						<ToggleButton Grid.Row="0" Grid.Column="1" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding IsEnabled}"/>

						<Label Grid.Row="1" Grid.Column="0" Content="{Binding Source={x:Static resx:UISimplePoseStrings.FlipSides}}" VerticalContentAlignment="Center"/>
						<ToggleButton Grid.Row="1" Grid.Column="1" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding FlipSides}"/>

					</Grid>

				</GroupBox>

				<GroupBox Header="{Binding CurrentBone.Tooltip, FallbackValue=''}" Margin="6"  Padding="4" IsEnabled="{Binding IsEnabled}">
					<controls:QuaternionEditor Value="{Binding CurrentBone.Rotation, Mode=TwoWay}" CameraRotation="{Binding CameraRotation}"/>
				</GroupBox>
			</StackPanel>
		</Grid>

	</Grid>
</UserControl>
