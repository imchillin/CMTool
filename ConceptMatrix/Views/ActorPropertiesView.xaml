        <GroupBox IsEnabled="False" Header="{Binding Source={x:Static resx:UIStringsContent.TransformationData}}" HorizontalAlignment="Left" VerticalAlignment="Top"  Style="{DynamicResource MaterialDesignGroupBox}" Margin="834,161,0,0" materialDesign:ShadowAssist.ShadowDepth="Depth3" BorderThickness="1" Height="146" Width="263" />

        <!-- Transformation Name -->
        <CheckBox IsEnabled="False" IsChecked="{Binding CharacterDetails.NPCName.freeze}" Content="{Binding Source={x:Static resx:UIStringsContent.Name}}" HorizontalAlignment="Left" Margin="840,205,0,0" VerticalAlignment="Top" Height="28"/>
        <mah:NumericUpDown IsEnabled="False" x:Name="NPCNameBox" Value="{Binding CharacterDetails.NPCName.value, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="928,205,0,0" VerticalAlignment="Top" Width="160" Background="{x:Null}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" TextAlignment="Right" Height="28"/>

        <!-- Transformation Model -->
        <CheckBox IsEnabled="False" IsChecked="{Binding CharacterDetails.NPCModel.freeze}" Content="{Binding Source={x:Static resx:UIStringsContent.NPCModel}}" HorizontalAlignment="Left" Margin="840,235,0,0" VerticalAlignment="Top" Height="28"/>
        <mah:NumericUpDown IsEnabled="False" x:Name="NPCModelBox" Value="{Binding CharacterDetails.NPCModel.value, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="928,235,0,0" VerticalAlignment="Top" Width="160" Background="{x:Null}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" TextAlignment="Right" Height="28"/>

        <Label Content="{Binding Source={x:Static resx:UIStringsContent.VisualEffect}}" HorizontalAlignment="Left" Margin="10,474,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="0" Height="40" FontSize="18" FontWeight="Bold"/>

        <!-- Wet -->
        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding CharacterDetails.Wetness.Activated}" Margin="232,462,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" BorderThickness="1" />
        <Label Content="{Binding Source={x:Static resx:UIStringsContent.Wet}}" ToolTip="{Binding Source={x:Static resx:UIStringsContent.WetToolTip}}" HorizontalAlignment="Left" Margin="153,464,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="0" Height="28"/>

        <!-- Drenched -->
        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding CharacterDetails.SWetness.Activated}" Margin="232,492,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" />
        <Label Content="{Binding Source={x:Static resx:UIStringsContent.Drenched}}" ToolTip="{Binding Source={x:Static resx:UIStringsContent.DrenchedToolTip}}" HorizontalAlignment="Left" Margin="151,494,0,0" VerticalAlignment="Top" Height="28"/>
        
        <!-- Status Effects -->
        <mah:NumericUpDown x:Name="StatusEffectBox" Maximum="2250" Minimum="0" Value="{Binding Path=CharacterDetails.StatusEffect.value, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="865,464,0,0" VerticalAlignment="Top" Width="150" Background="{x:Null}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Interval="1" TextAlignment="Right" NumericInputMode="Numbers" SourceUpdated="StatusEffectBox_SourceUpdated" Speedup="False" Height="28" IsReadOnly="True"/>
        <Button x:Name="StatusEffectZero" materialDesign:ShadowAssist.ShadowDepth="Depth3" Content="{Binding Source={x:Static resx:UIStringsContent.ResetButton}}" HorizontalAlignment="Left" Margin="1025,477,0,0" VerticalAlignment="Top" Width="70" Height="28" FontSize="14" Click="StatusEffectZero_Click" IsEnabled="False"/>
        <Label x:Name="StatusEffectText" Content="{Binding Source={x:Static resx:UIStringsContent.StatusEffect}}" ToolTip="{Binding Source={x:Static resx:UIStringsContent.StatusEffectToolTip}}" HorizontalAlignment="Left" Margin="765,472,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="0"/>
        <ComboBox x:Name="StatusEffectBox2" SelectedValuePath="Id" SelectedValue="{Binding CharacterDetails.StatusEffect.value}" HorizontalAlignment="Left" Margin="865,497,0,0" VerticalAlignment="Top" Width="150" Height="28" FontSize="11.35" SelectedIndex="0" SelectionChanged="StatusEffectBox2_SelectionChanged" Padding="0">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<Image Width="20" Height="20" Source="{Binding Icon}"/>
						<Label Content="{Binding Name}" />
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<VirtualizingStackPanel />
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
		</ComboBox>

    </Grid>
</UserControl>
