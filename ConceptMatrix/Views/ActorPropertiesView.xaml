        <TextBox Style="{StaticResource MaterialDesignTextBox}" x:Name="PlayerAoBbox" HorizontalAlignment="Left" Height="64" Margin="950,386,0,0" MaxLength="77" TextWrapping="Wrap" Text="{Binding Path=CharacterDetails.TestArray.value}" VerticalAlignment="Top" Width="138" BorderThickness="1" KeyDown="PlayerAoBbox_KeyDown" FontSize="11" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="AoBButton" materialDesign:ShadowAssist.ShadowDepth="Depth3" Content="{Binding Source={x:Static resx:UIStringsContent.Apply}}" HorizontalAlignment="Left" Margin="840,418,0,0" VerticalAlignment="Top" Width="95" Click="AoBButton_Click" Padding="0,4"/>

